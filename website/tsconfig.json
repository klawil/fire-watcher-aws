{
	"compilerOptions": {
		"target": "ES6",
		"lib": [
			"ESNext",
			"DOM",
		],
		"sourceMap": true,
		"outDir": "js",
		"removeComments": true,
		"moduleResolution": "Node",
		"alwaysStrict": true,
		"allowUnreachableCode": true,
		"noImplicitAny": true,
		"strict": true,
		"noUnusedLocals": true
	},
	"include": [ "./ts/*.ts" ]
}
